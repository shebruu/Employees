{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <h1>Group</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ group.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>MaxSize</th>
                <td>{{ group.maxSize }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_group_index') }}">back to list</a>

    <a href="{{ path('app_group_edit', {'code': group.code}) }}">edit</a>

    {{ include('group/_delete_form.html.twig') }}
{% endblock %}
