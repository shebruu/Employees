{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}

{% if app.user %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des employés</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if employees is not empty %}
                        {% for employee in employees %}
                            <tr>
                                <td>{{ employee.firstName }}</td>
                                <td>{{ employee.lastName }}</td>
                                <td>{{ employee.email }}</td>
                                <td class="text-center">
                                    {% if app.user and app.user.isAdmin %}
                                        <a href="{{ path('app_employee_show', {'id': employee.id}) }}" class="btn btn-sm btn-outline-primary me-1">Voir</a>
                                        <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                                    {% else %}
                                        <a href="{{ path('app_employee_show', {'id': employee.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                Aucun employé trouvé.<br>
                                <span class="small">Veuillez <a href="{{ path('login_route') }}">vous connecter</a> ou <a href="{{ path('register_route') }}">créer un compte</a>.</span>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>

        {% if app.user and app.user.isAdmin %}
            <div class="mt-3">
                <a href="{{ path('app_employee_new') }}" class="btn btn-success">Créer un nouvel employé</a>
            </div>
        {% endif %}
    </div>
{% endif %}
{% endblock %}

