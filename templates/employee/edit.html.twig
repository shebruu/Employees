{% extends 'base.html.twig' %}

{% block title %}Modifier un employé{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier un employé</h1>

    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            {{ include('employee/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3 gap-2">
        <a href="{{ path('app_employee_index') }}" class="btn btn-lg btn-primary fw-bold shadow">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <span>
            {{ include('employee/_delete_form.html.twig', {'button_class': 'btn btn-lg btn-danger fw-bold shadow'}) }}
        </span>
    </div>
</div>
{% endblock %}
