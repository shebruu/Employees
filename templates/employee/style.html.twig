{# template.twig #}

{% block stylesheets %}
    {% style %}
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile {
            margin-right: 20px;
        }

        .profile img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 2px solid #ccc;
        }

        .menu ul {
            list-style-type: none;
            padding: 0;
        }

        .menu ul li {
            margin-bottom: 10px;
        }

        .menu ul li a {
            text-decoration: none;
            color: #333;
            font-size: 18px;
        }

        .menu ul li a:hover {
            color: #007bff;
        }
    {% endstyle %}
{% endblock %}