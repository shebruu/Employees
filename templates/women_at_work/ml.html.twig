{% extends 'base.html.twig' %}
{% block title %}Statistique des genre employees !{% endblock %}

{% block body %}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<canvas id="myChart"></canvas>



<script>


var ctx = document.getElementById('myChart').getContext('2d');

   var myChart = new Chart(ctx, {
          type: 'bar',
    data: {
        labels: {{ (topFemaleDepartments|map(department => department.dept_name) | merge(bottomFemaleDepartments|map(department => department.dept_name)))|json_encode|raw }},
        datasets: [{
            label: 'Nombre d\'employées dans les départements les plus représentés',
            data: {{ topFemaleDepartments|map(department => department.count)|json_encode|raw }},
            backgroundColor: 'rgba(54, 162, 235, 0.6)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }, {
            label: 'Nombre d\'employées dans les départements les moins représentés',
            data: {{ bottomFemaleDepartments|map(department => department.count)|json_encode|raw }},
            backgroundColor: 'rgba(255, 99, 132, 0.6)',
            borderColor: 'rgba(255, 99, 132, 1)',
            borderWidth: 1
        }]
   
        },
        options: {
                scales: {
                y: {
                    beginAtZero: true,
                    stepSize: 1, 
                    ticks: {
                        precision: 0 
                    }
                }
            },
       
       
        }
    });
</script>


    {% endblock %}