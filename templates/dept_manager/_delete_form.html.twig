
<form method="post" action="{{ path('app_dept_manager_delete') }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce manager ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dept_manager.deptName ~ dept_manager.employeeId) }}">
    <input type="hidden" name="deptName" value="{{ dept_manager.deptName }}">
    <input type="hidden" name="employeeId" value="{{ dept_manager.employeeId }}">
    <button class="btn btn-danger btn-sm fw-bold" title="Supprimer">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>

