{% extends 'base.html.twig' %}

{% block title %}DeptManager index{% endblock %}

{% block body %}
    <h1>DeptManager index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DeptNo</th>
                <th>FromDate</th>
                <th>ToDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dept_manager in dept_managers %}
            <tr>
                <td>{{ dept_manager.id }}</td>
                <td>{{ dept_manager.deptNo }}</td>
                <td>{{ dept_manager.fromDate ? dept_manager.fromDate|date('Y-m-d') : '' }}</td>
                <td>{{ dept_manager.toDate ? dept_manager.toDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_dept_manager_show', {'id': dept_manager.id}) }}">show</a>
                    <a href="{{ path('app_dept_manager_edit', {'id': dept_manager.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dept_manager_new') }}">Create new</a>
{% endblock %}
