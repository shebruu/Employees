{% extends 'base.html.twig' %}

{% block title %}Liste des managers de département{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Liste des managers de département</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Département</th>
                    <th>Du</th>
                    <th>Au</th>
                    <th>Manager</th>
                </tr>
            </thead>
            <tbody>
                {% if dept_managers is not empty %}
                    {% for dept_manager in dept_managers %}
                        <tr>
                            <td>{{ dept_manager.departement.deptName }}</td>
                            <td>{{ dept_manager.fromDate ? dept_manager.fromDate|date('Y-m-d') : '' }}</td>
                            <td>{{ dept_manager.toDate ? dept_manager.toDate|date('Y-m-d') : '' }}</td>
                            <td>{{ dept_manager.employee.firstName }} {{ dept_manager.employee.lastName }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucun manager trouvé.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="mt-3">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_dept_manager_new') }}" class="btn btn-success fw-bold shadow">Créer un nouveau manager</a>
    {% endif %}
    </div>
</div>
{% endblock %}
