{% extends 'base.html.twig' %}

{% block title %}Nouveau département
{% endblock %}

{% block body %}

	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<div class="card shadow-sm">
					<div class="card-header bg-success text-white">
						<h2 class="mb-0">Créer un nouveau département</h2>
					</div>
					<div class="card-body">
						{{ include('departement/_form.html.twig', {'button_label': 'Créer'}) }}
						<a href="{{ path('app_departement_index') }}" class="btn btn-outline-secondary mt-3">
							<i class="bi bi-arrow-left"></i>
							Retour à la liste
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
