{# templates/headquarters_location.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Localisation du siège{% endblock %}

{% block body %}
    <h1>Localisation du siège</h1>

    <div id="map"></div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB-INheP-dRJNbh_boQdtTn9CNmymimQDk&callback=initMap" async defer></script>

    <script>
        function initMap() {
            // Coordonnées du siège de la société
            var companyLocation = { lat: 48.8566, lng: 2.3522 };

            // Création de la carte
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: companyLocation
            });

            // Marqueur pour le siège de la société
            var marker = new google.maps.Marker({
                position: companyLocation,
                map: map,
                title: 'Siège de la société'
            });
        }
    </script>
{% endblock %}
